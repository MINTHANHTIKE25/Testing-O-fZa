<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ZasCodeTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.ZasCodeTest" parent="Base.Theme.ZasCodeTest" >
    </style>
    <!--customization of title textview-->
    <style name="TitleText" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- customization of image views-->
    <style name="ShapeableImageView" parent="">
        <item name="cornerSize">10%</item>

    </style>

    <!-- customization of navigation views-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Material3.HeadlineLarge</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSurface">@color/pretty_red</item>
        <item name="colorOnSurfaceVariant">@color/darker_grey</item>
        <item name="colorOnSecondaryContainer">@color/pretty_red</item>
    </style>

    <!-- customization of filter button-->
    <style name="FilterButton" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App</item>
    </style>
    <style name="ShapeAppearance.App" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">10dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ThemeOverlay" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/pretty_red</item>
    </style>

    <!--customization of prive tv-->
    <style name="dollarTv" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight" tools:ignore="NewApi">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>